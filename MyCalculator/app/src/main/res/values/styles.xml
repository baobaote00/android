<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseTextViewStyle">
        <item name="android:layout_width">79dp</item>
        <item name="android:layout_height">113dp</item>
        <item name="android:background">#f3a19f</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="actionBarStyle">@style/actionBar</item>
    </style>
    <style name="actionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="background">@drawable/actionbar</item>
        <item name="titleTextStyle">@style/textStyles</item>
    </style>
    <style name="textStyles" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>